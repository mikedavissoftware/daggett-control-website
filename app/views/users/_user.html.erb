<div id="<%= dom_id user %>">

  <% if @current_user && user.id == @current_user.id %>
    <h3><%= user.name %> (Current User)</h3>
  <% else %>
    <h3><%= user.name %></h3>
  <% end %>

  <p>
    <strong>Username: </strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Password digest: </strong>
    <%= user.password_digest %>
  </p>

  <p>
    <strong>Name: </strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Role: </strong>
    <%= user.role %>
  </p>

  <p>
    <strong>Bio: </strong>
    <%= user.bio %>
  </p>

  <p>
    <strong>Website: </strong>
    <%= user.website %>
  </p>

  <p>
    <strong>Image:</strong>
    <br/>
    <%= link_to image_tag(user.image_as_thumbnail), user.image, :class => "link-exclude" if user.image.attached? %>
  </p>

</div>
