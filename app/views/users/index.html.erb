<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<hr width="15%" />

<%= link_to "Create a New User", new_user_path, :class => "button" %>

<h2>...or Browse Your Users Below</h2>

<hr width="40%" />

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <%= link_to "Show this user", user, :class => "button" %>
    <hr width="75%" />
  <% end %>
</div>
